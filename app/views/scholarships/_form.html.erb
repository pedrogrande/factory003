<%= simple_form_for(@scholarship) do |f| %>
  <%= f.error_notification %>

  	<div class="row">
	  	<div class="col-lg-6">
	  		<div class="form-group">
	    		<%= f.input :first_name, :input_html => { class: "form-control"} %>
	    	</div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-6">
	  		<div class="form-group">
    			<%= f.input :last_name, :input_html => { class: "form-control"} %>
    			</div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-6">
	  		<div class="form-group">
    <%= f.input :phone, :input_html => { class: "form-control"} %>
    </div>
	    </div>
	    </div>
	<div class="row">
	  	<div class="col-lg-9">
	  		<div class="form-group">
    <%= f.input :email, :input_html => { class: "form-control"} %>
    </div>
	</div>
	</div>
	<div class="row">
	  	<div class="col-lg-9">
	  		<div class="form-group">
    <%= f.input :linkedin, label: 'LinkedIn profile link (or other social network profile)', :input_html => { class: "form-control"} %>
    </div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-12">
	  		<div class="form-group">
    <%= f.input :background, label: 'Describe yourself, what motivates you and what you are passionate about.', :input_html => { class: "form-control", rows: "6"} %>
    	</div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-12">
	  		<div class="form-group">
    <%= f.input :education_history, label: 'Besides high school, what other study have you done?', :input_html => { class: "form-control", rows: "6"} %>
    	</div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-12">
	  		<div class="form-group">
    <%= f.input :work_history, label: 'Which industries have you worked in and what jobs have you enjoyed?', :input_html => { class: "form-control", rows: "6"} %>
    	</div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-12">
	  		<div class="form-group">
    <%= f.input :motivation, label: 'Why are you interested in learning to code and what makes you a worthy recipient of the Coder Factory Scholarship? ', :input_html => { class: "form-control", rows: "6"} %>
    	</div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-12">
	  		<div class="form-group">
    <%= f.input :goals, label: 'What are the goals you have for yourself over the next 12 months?', :input_html => { class: "form-control", rows: "6"} %>
    	</div>
	    </div>
	</div>
	<div class="row">
	  	<div class="col-lg-12">
	  		<div class="form-group">
    <%= f.input :agree_to_terms, label: 'I agree to the scholarship terms and conditions.' %>
    	</div>
	    </div>
	</div>

  <div class="form-actions">
    <%= f.submit 'Apply now', class: 'btn btn-success btn-lg' %>
  </div>
<% end %>

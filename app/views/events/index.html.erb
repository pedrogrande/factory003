<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Intro</th>
      <th>Description</th>
      <th>Location</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th>Date</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th>Cost</th>
      <th>Rsvp</th>
      <th>Icon</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.intro %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.address %></td>
        <td><%= event.suburb %></td>
        <td><%= event.postcode %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time %></td>
        <td><%= event.finish_time %></td>
        <td><%= event.cost %></td>
        <td><%= event.rsvp %></td>
        <td><%= event.icon %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


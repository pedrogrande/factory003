<%= simple_form_for(@intake) do |f| %>
  <%= f.error_notification %>

  
    <%= f.association :course %>
  
    <%= f.input :start_date %>
    <%= f.input :class_days %>
    <%= f.input :start_time %>
    <%= f.input :finish_time %>
    <%= f.input :duration, :input_html => { class: "form-control"} %>
    <%= f.input :duration_type, :input_html => { class: "form-control"} %>
    <%= f.input :scheduled %>
    <%= f.input :confirmed %>
    <%= f.input :location, :input_html => { class: "form-control"} %>
    <%= f.input :cost, :input_html => { class: "form-control"} %>
    <%= f.submit %>
<% end %>
